package wvustat.interfaces;

import java.rmi.RemoteException;

/**
 *	This defines an interface for a remote observer.
 *
 *	@author: Hengyi Xue
 *	@version: 1.0, Oct. 29, 1999
 */

public interface RemoteObserver {

    /**
     *	Causes a remote observer to update itself
     *
     *	@msg a message about what has happened
     */
    public void update(String msg) throws RemoteException;
}
